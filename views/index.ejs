<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>ProjWEB - Login</title>
    <!--link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" /-->
    <link rel="stylesheet" href="../style/bootstrap-3.3.1/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='../style/style.css' />
    <link rel="icon" href="../img/icon.ico">
</head>

<body id="clrblk">
    <div class="container">

        <div class="text-center height-10">
            <img src="../img/projWebLogo.png" class="img-responsive center-block img-33" alt="Responsive image">
        </div>

        <div id="loginbox" style="margin-top:25px;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
            <div class="panel panel-light">
                <div class="panel-heading">
                    <div class="panel-title text-center">Login</div>
                </div>

                <div style="padding-top:15px" class="panel-body">
                    <% if (message.length > 0) { %>
                        <div class="alert alert-danger col-sm-12">
                            <%= message %>
                        </div>
                        <% } %>

                            <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">

                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span>
                                    <input id="login-username" type="text" class="form-control" name="user_name" value="" placeholder="Nome de Usuário">
                                </div>

                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </span>
                                    <input id="login-password" type="password" class="form-control" name="password" placeholder="Senha">
                                </div>



                                <div class="input-group">
                                    <!--<div class="checkbox">
                                        <label>
                                          <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                        </label>
                                      </div>-->
                                </div>


                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls">
                                        <button id="btn-login" type="submit" class="btn btn-light width-100">Acessar </button>


                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:90%">
                                            Não tem uma conta?
                                            <a href="/signup">
                                                Assine aqui.
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </form>

                </div>
            </div>
        </div>

    </div>
</body>

</html>