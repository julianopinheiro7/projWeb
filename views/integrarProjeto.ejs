<html lang="pt">

<%- include header %>

<div class="container height-2">

    <div class="row">
        <p class="title titleIntegrar">Integrar Projeto</p>
    </div>

    <div class="row">
        <form action="/integrarProjeto" method="GET">

            <div class="col-md-4 height-1 padding-left-0">
                <span>Selecione o Projeto:</span>
                <div id="divNameProjeto">
                    <% if (nomeProjeto) { %>
                        <% for(var i=0; i < nomeProjeto.length; i++) { %>
                        <span id="nameProjeto">
                            <%= nomeProjeto[i].nome %> </span>
                    <% } %>
                    <% } %>
                </div>
                <select name="idProjeto" class="form-control">
                    <option value=""></option>
                    <% 
                        for(var i = 0; i < selectP.length; i++) { 
                        let selected = ( selectP.idProjeto == selectP[i].idProjeto ) ? "selected" : "";
                    %>
                    <option value="<%=selectP[i].idProjeto%>" <%=selected %> >
                        <%=selectP[i].nome%>
                    </option>
                    <% } %>
                </select>
            </div>

            <div class="col-md-1 height-3">
                <button class="btn btn-light">Exibir</button>
            </div>
        </form>

        <div class="height-3">
            <a class="btn btn-light link" id="btnNovoRecurso" href="/novoProjRecurso" >Adicionar Recurso</a>
        </div>
    </div>

    <div class="row height-2">

        <% if (dados) { %>
        <div class="container padding-left-0">
            <!-- Mostrar quadro com os recursos do projeto -->

            <div id="tableProjRec">
                <table class="table table-sm">
                    <thead>
                        <tr id="theadProjRec">
                            <th scope="col">Recurso</th>
                            <th scope="col">Valor</th>
                            <th scope="col" id="thForma">Forma de Cobran√ßa</th>
                            <th scope="col">Quantidade</th>
                            <th scope="col" class="padding-left-5">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (dados) { %>
                        <% for(var i=0; i < dados.length; i++) { %>
                        <tr>
                            <td class="colProjRecursos">
                                <%= dados[i].nome %>
                            </td>
                            <td class="colProjRecursos">
                                <div class="money">
                                    <%= dados[i].valor %>
                                </div>
                            </td>
                            <td class="colProjRecursos">
                                <%= dados[i].tipoCobranca %>
                            </td>
                            <td class="colProjRecursos">
                                <%= dados[i].qtdeRecurso %>
                            </td>
                            <td class="actions center">
                                <div class="options">
                                    <ul>
                                        <li>
                                            <a href="#" class="linkOptionRec">
                                                <img class="iconActions" src="../img/actions.png" alt="">
                                            </a>
                                            <ul>
                                                <div class="inline div-actions">
                                                    <li class="li-div-actions">
                                                        <a href="/novoProjRecurso?idRecurso=<%= dados[i].idRecurso %>">
                                                            <img src="../img/edit.png" alt="Editar" title="Editar Recurso Alocado">
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="/excluirProjRec?idRecurso=<%= dados[i].idRecurso %>" onclick="updateConfirm();" >
                                                            <img src="../img/delete.png" alt="Delete" title="Deletar Recurso Alocado">
                                                        </a>
                                                    </li>
                                                </div>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>


            <% } %>
        </div>
    </div>

</div>


<%- include footer %>