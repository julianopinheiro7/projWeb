<html lang="pt">

<%- include header %>

<div class="container">

    <div id="projetobox" style=" margin-top:50px" class="mainbox col-md-10 col-sm-10 col-md-offset-1">


        <div class="panel panel-light">
            <div class="panel-heading">
                <div class="panel-title text-center tituloPainel">Novo Projeto</div>
            </div>
            <div class="panel-body">

                <%if(message == 'T') {%>
                <div class="card-panel red lighten-3 center red">
                    Dados gravados com sucesso!
                </div>
                <% } %>
                <%if(message == 'F') {%>
                <div class="card-panel red lighten-1 center">
                    <span>Você deve preencher todos os campos!</b>
                </div>
                <% } %>
                
                <form class="form-horizontal" role="form" method="post" action="/cadastrar" onSubmit="return checkblank(this);">
                    <input type="hidden" name="idProjeto" value="<%=dados.idProjeto%>">
                    <div class="form-group">
                        <label for="nome" class="col-md-3 control-label">Nome</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" value="<%=dados.nome%>" name="nome" placeholder="Nome do Projeto">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="data_inicio" class="col-md-3 control-label">Data de Inicio</label>
                        <div class="col-md-3">                           
                            <input type="text" class="form-control data" value="<%=dados.data_inicio%>" name="data_inicio" placeholder="Data de Inicio">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="horas_previstas" class="col-md-3 control-label">Horas Previstas</label>
                        <div class="col-md-3">
                            <input type="number" class="form-control" value="<%=dados.horas_previstas%>" name="horas_previstas" placeholder="Horas Previstas">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="status" class="col-md-3 control-label">Status</label>
                        <div class="col-md-3">
                            <select name="status" id="status" class="select">
                                <option value="" disabled>Selecione</option>
                                <option value="Pendente">Pendente</option>
                                <option value="Em andamento">Em andamento</option>
                                <option value="Concluido">Concluído</option>
                            </select>
                        </div>
                    </div>                    

                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-projeto" type="submit" class="btn btn-light btn-width30">Salvar</button>
                        </div>
                    </div>

                    <input type="text" class="form-control disabled" name="idUsuario" value="<%=user%>">

                </form>
            </div>
        </div>

    </div>
</div>

<%- include footer %>