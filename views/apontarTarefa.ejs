<html lang="pt">

<%- include header %>

<div class="container">

    <div id="recursobox" style=" margin-top:50px" class="mainbox col-md-10 col-sm-10 col-md-offset-1">


        <div class="panel panel-light">
            <div class="panel-heading">
                <div class="panel-title text-center tituloPainel">Apontar Tarefa</div>
            </div>
            <div class="panel-body">

                <%if(message == 'T') {%>
                <div class="card-panel red center">
                        Dados gravados com sucesso!                    
                </div>
                <% } %>
                <%if(message == 'F') {%>
                <div class="card-panel red center">
                    <span>Você deve preencher todos os campos!</b>
                </div>
                <% } %>

                <form class="form-horizontal" role="form" method="post" action="/gravarTarefa" onSubmit="return checkblank(this);">
                    <input type="hidden" name="idTarefa" value="<%=dados.idTarefa%>">                   
                    <div class="form-group">
                        <label for="idProjeto" class="col-md-3 control-label">Projeto</label>
                        <div class="col-md-3">
                            <input type="text" id="idProjeto" value="<%=dados.idProjeto%>" class="form-control" name="idProjeto" placeholder="Projeto">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="data_inicial" class="col-md-3 control-label">Data Inicial</label>
                        <div class="col-md-8">
                            <input type="text" id="data_inicial" class="form-control" value="<%=dados.data_inicial%>" name="data_inicial" placeholder="Data Inicial">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="data_final" class="col-md-3 control-label">Data Final</label>
                        <div class="col-md-8">
                            <input type="text" id="data_final" class="form-control" value="<%=dados.data_final%>" name="data_final" placeholder="Data Final">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="descricao" class="col-md-3 control-label">Descrição</label>
                        <div class="col-md-8">
                            <textarea type="text" id="descricao" class="form-control" value="<%=dados.descricao%>" name="descricao" placeholder="Descrição">
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-Recurso" type="submit" class="btn btn-light">
                                <i class="icon-hand-right"></i>
                                Salvar</button>
                        </div>
                    </div>

                    <input type="text" class="form-control disabled" name="idUsuario" value="<%=user%>">

                </form>
            </div>
        </div>

    </div>
</div>

<%- include footer %>