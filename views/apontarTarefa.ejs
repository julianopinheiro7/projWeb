<html lang="pt">

<%- include header %>

<div class="container">
    <div id="recursobox" class="mainbox col-md-12 col-sm-12">

        <div class="panel panel-light">
            <div class="panel-heading">
                <div class="panel-title text-center tituloPainel">Apontar Tarefa</div>
            </div>
            <div class="panel-body">

                <%if(message == 'T') {%>
                <div class="card-panel red center">
                    Dados gravados com sucesso!
                </div>
                <% } %>
                <%if(message == 'F') {%>
                <div class="card-panel red center">
                    <span>Você deve preencher todos os campos!</b>
                </div>
                <% } %>

                <form class="form-horizontal" role="form" method="post" action="/gravarTarefa" id="formApontarTarefa"
                    onSubmit="return checkblank(this);">
                    <input type="text" class="form-control disabled" name="idUsuario" value="<%=user%>">
                    <input type="hidden" name="idTarefa" value="<%=dados.idTarefa%>">
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class=col-md-6>
                                <label for="idProjeto" class="size-13">Projeto</label>
                                <select name="idProjeto" class="form-control">
                                    <option value="">Selecione</option>
                                    <% 
                                        for(var i = 0; i < selectProjeto.length; i++) { 
                                        let selected = ( dados.idProjeto == selectProjeto[i].idProjeto ) ? "selected" : "";
                                    %>
                                    <option value="<%=selectProjeto[i].idProjeto%>" <%=selected %> >
                                        <%=selectProjeto[i].nome%>
                                    </option>
                                    <% } %>
                                </select>
                            </div>
                            <div class=col-md-2>
                                <label for="data_inicial" class="size-13">Data Inicial</label>
                                <input type="text" id="data_inicial" class="form-control data " value="<%=dados.data_inicial%>"
                                    name="data_inicial" placeholder="___/___/_____">
                            </div>
                            <div class=col-md-2>
                                <label for="hora_inicial" class="size-13">Hora Inicial</label>
                                <input type="text" id="data_inicial" class="form-control hora" value="<%=dados.hora_inicial%>"
                                    name="hora_inicial" placeholder=" __:__ ">
                            </div>
                            <div class=col-md-2>

                                <label for="hora_final" class="size-13">Hora Final</label>
                                <input type="text" id="data_inicial" class="form-control hora " value="<%=dados.hora_final%>"
                                    name="hora_final" placeholder=" __:__ ">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-12">

                                <label for="descricao" class="size-13">Descrição</label>
                                <input name="descricao" id="descricao" class="form-control" value="<%=dados.descricao%>">

                                <button id="btnRecurso" type="submit" class="btn btn-light">
                                    <i class="icon-hand-right"></i>
                                    Salvar</button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<%- include footer %>